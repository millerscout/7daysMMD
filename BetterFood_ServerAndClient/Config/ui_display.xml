<?xml version="1.0" encoding="UTF-8"?>

<configs>
	<insertBefore xpath="/ui_display_info/item_display/item_display_info[@display_type='food']">
	
		<item_display_info display_type="betterFoodFHW" display_group="groupConsumables">
			<display_entry name="$foodAmountAdd" title_key="statFoodAmount"/>
			<display_entry name="foodHealthAmount" title_key="statHealthAmount"/>
			<display_entry name="$waterAmountAdd" title_key="statWaterAmount"/>
		</item_display_info>
		
		<item_display_info display_type="betterFoodFHWS" display_group="groupConsumables">
			<display_entry name="$foodAmountAdd" title_key="statFoodAmount"/>
			<display_entry name="foodHealthAmount" title_key="statHealthAmount"/>
			<display_entry name="$waterAmountAdd" title_key="statWaterAmount"/>
			<display_entry name=".foodStaminaBonusAdd" title_key="statFoodStaminaBonus" display_type="Integer"/>
		</item_display_info>
		
		<item_display_info display_type="betterFoodWS" display_group="groupConsumables">
			<display_entry name="$waterAmountAdd" title_key="statWaterAmount"/>
			<display_entry name="dStaminaRegen" title_key="statStaminaRegen" display_type="Percent"/>
		</item_display_info>
		
		<item_display_info display_type="betterFoodFH" display_group="groupConsumables">
			<display_entry name="$foodAmountAdd" title_key="statFoodAmount"/>
			<display_entry name="foodHealthAmount" title_key="statHealthAmount"/>
		</item_display_info>
		
		<item_display_info display_type="betterFoodFHS" display_group="groupConsumables">
			<display_entry name="$foodAmountAdd" title_key="statFoodAmount"/>
			<display_entry name="foodHealthAmount" title_key="statHealthAmount"/>
			<display_entry name=".foodStaminaBonusAdd" title_key="statFoodStaminaBonus" display_type="Integer"/>
		</item_display_info>
		
	
	<!-- Fix foodRawMeat/foodRottingFlesh not displaying negative Value for negative Stamina -->
		<item_display_info display_type="betterFoodFHS_N" display_group="groupConsumables">
			<display_entry name="$foodAmountAdd" title_key="statFoodAmount"/>
			<display_entry name="foodHealthAmount" title_key="statHealthAmount"/>
			<display_entry name=".foodStaminaBonusAdd" title_key="statFoodStaminaBonus" display_type="Integer"/>
			<display_entry name="dDysenteryRisk" title_key="statDysenteryRisk" display_type="Percent" negative_preferred="true"/>
		</item_display_info>
	</insertBefore>
</configs>