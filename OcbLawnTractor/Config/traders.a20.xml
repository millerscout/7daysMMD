<configs>
	<!-- You can buy the mower, but not the mods -->
	<!-- You can buy schematics for everything though -->

	<append xpath="//trader_item_group[@name='rareBooks']">
		<item name="vehicleLawnTractorChassisSchematic"/>
		<item name="vehicleLawnTractorAccessoriesSchematic"/>
	</append>

	<append xpath="//trader_item_group[@name='vehiclePartsT1']">
		<item name="vehicleLawnTractorPlaceable"/>
		<item name="vehicleLawnTractorChassis"/>
		<item name="vehicleLawnTractorAccessories"/>
	</append>

	<append xpath="//trader_item_group[@name='schematicsVehiclesMods']">
		<item name="modVehicleLawnTractorGrassCollectorSchematic" prob="0.8"/>
		<item name="modVehicleLawnTractorPlantCollectorSchematic" prob="0.5"/>
		<item name="modVehicleLawnTractorCropsCollectorSchematic" prob="0.2"/>
		<item name="modVehicleLawnTractorCropsProtectorSchematic" prob="0.6"/>
		<item name="modVehicleLawnTractorCropsReseederSchematic" prob="0.2"/>
	</append>

	<!-- Increase amount in the world a tiny little bit -->
	<!-- Note: no trader sells any of the `modMeleeTn` groups -->
	<append xpath="//trader_item_group[@name='modGunT3']">
		<item name="modMeleeClubMetalChain"/>
		<item name="modMeleeTemperedBlade"/>
	</append>
</configs>
